.gr,.lf{
  position: relative;
}
.lf::before,.gr::after{
  position:absolute;
  content: "";           
  height: 0;
  width: 0;
  border: 5px solid transparent;
}
.gr::after{      
  right: -24rpx; 
  border-left: 5px solid #96EB6A;
}
.lf::before{      
  left: -24rpx; 
  border-right: 5px solid #fff;
}
